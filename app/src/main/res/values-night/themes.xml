<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkoutApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="fontFamily">@font/morton</item>
    </style>

    <style name="EditTextTheme" >
        <item name="android:foregroundTint">@color/faded_orange</item>
        <item name="colorControlNormal">@color/faded_orange</item>
        <item name="colorControlActivated">@color/faded_orange</item>
        <item name="colorControlHighlight">@color/faded_orange</item>
        <item name="hintTextColor">@color/faded_orange</item>
        <item name="android:textColorHint">@color/faded_orange</item>
        <item name="boxStrokeErrorColor">@color/faded_orange</item>
    </style>


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>
    <style name="Font" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="fontFamily">@font/morton</item>
    </style>
    <style name="Font2" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="fontFamily">@font/morton_bold</item>
        <item name="android:textColor">@drawable/orange_color_gradient</item>
    </style>
    <style name="Font3" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="fontFamily">@font/sinkin</item>
    </style>
    <style name="Font4" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="fontFamily">@font/monsterrat</item>
    </style>

</resources>